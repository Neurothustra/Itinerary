@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" data-bind="value: attendeeName" id="name" class="form-control" required />
        </div>
    </div>
    <div class="col-md-4">
        <label for="email">Email:</label>
        <input type="email" data-bind="value: attendeeEmail" id="email" class="form-control" required />
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Friday</h3>
                <small>Classes are available on a role type basis. Waiting lists will be offered.</small>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="selectIntensive">Available Intensives:</label>
                            <select data-bind="options: friIntensiveOptions, value: friSelectedIntesiveOption" id="friIntensive" class="form-control selectIntensive" required></select>
                        </div>
                        <div class="form-group">
                            <label for="selectRoleType">Select role type:</label>
                            <select data-bind="options: roleOptions, value: friSelectedRoleOption, click: friRole" id="friRoleType" class="form-control selectRoleType" required></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Saturday</h3>
                <small>Classes are available on a role type basis. Waiting lists will be offered.</small>
            </div>
            <div class="panel-body">
                @* sessions are generated by the 'buildItineraryForm' *@
                <div class="row generateSaturday">
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Sunday</h3>
                <small>Classes are available on a role type basis. Waiting lists will be offered.</small>
            </div>
            <div class="panel-body">
                <div class="row generateSunday">
                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Monday</h3>
                <small>Classes are available on a role type basis. Waiting lists will be offered.</small>
            </div>
            <div class="panel-body">
                <div class="row generateMonday">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div id="printItinerary" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Your Itinerary</h3>
            </div>
            <div class="panel-body">
                <table class="table">
                    <thead>Philly itinerary 2017</thead>
                    <tbody>
                        <tr>
                            <td><strong>Friday</strong></td>
                        </tr>
                        <tr>
                            <td>
                                <span class="boldFont" data-bind="text: friSelectedRoleOption"></span> -
                                <span data-bind="text: friSelectedIntesiveOption"></span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Saturday</strong></td>
                        </tr>
                        <tr>
                            <td>
                                <span class="boldFont" data-bind="text: satSelectedRoleOption1"></span> -
                                <span data-bind="text: satSelectedSection1"></span>
                                <br />
                                <span class="boldFont" data-bind="text: satSelectedRoleOption2"></span> -
                                <span data-bind="text: satSelectedSection2"></span>
                                <br />
                                <span class="boldFont" data-bind="text: satSelectedRoleOption3"></span> -
                                <span data-bind="text: satSelectedSection3"></span>
                                <br />
                                <span class="boldFont" data-bind="text: satSelectedRoleOption4"></span> -
                                <span data-bind="text: satSelectedSection4"></span>
                            </td>
                        </tr>

                        <tr>
                            <td><strong>Sunday</strong></td>
                        </tr>
                        <tr>
                            <td>
                                <span class="boldFont" data-bind="text: sunSelectedRoleOption1"></span> -
                                <span data-bind="text: sunSelectedSection1"></span>
                                <br />
                                <span class="boldFont" data-bind="text: sunSelectedRoleOption2"></span> -
                                <span data-bind="text: sunSelectedSection2"></span>
                                <br />
                                <span class="boldFont" data-bind="text: sunSelectedRoleOption3"></span> -
                                <span data-bind="text: sunSelectedSection3"></span>
                                <br />
                                <span class="boldFont" data-bind="text: sunSelectedRoleOption4"></span> -
                                <span data-bind="text: sunSelectedSection4"></span>
                            </td>
                        </tr>

                        <tr>
                            <td><strong>Monday</strong></td>
                        </tr>
                        <tr>
                            <td>
                                <span class="boldFont" data-bind="text: monSelectedRoleOption1"></span> -
                                <span data-bind="text: monSelectedSection1"></span>
                                <br />
                                <span class="boldFont" data-bind="text: monSelectedRoleOption2"></span> -
                                <span data-bind="text: monSelectedSection2"></span>
                                <br />
                                <span class="boldFont" data-bind="text: monSelectedRoleOption3"></span> -
                                <span data-bind="text: monSelectedSection3"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div id="innerHidden">
                    <button class="btn btn-default" id="submitItinerary" data-bind="click: postItinerary">Submit</button>
                    <button id="printItinerary" class="btn btn-success" onclick="window.print()" disabled>Print your Itinerary</button>
                    <label class="text-danger" data-bind="text: outputMessage"></label>
                    <span id="printAlert" style="display: none;">*Please note that the printout adds exptra pages. We are looking into the issue, but know that the itinerary is there on the fifth page. Thank you.</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var itinerary = new Itinerary();
        itinerary.buildItineraryForm("sat", 4, ".generateSaturday");
        itinerary.buildItineraryForm("sun", 4, ".generateSunday");
        itinerary.buildItineraryForm("mon", 3, ".generateMonday");
        ko.applyBindings(itinerary);

        $("#friIntensive").change(function () {
            itinerary.friRole();
        });
        $("#sat1session").change(function () {
            itinerary.sat1role();
        });
        $("#sat2session").change(function () {
            itinerary.sat2role();
        });
        $("#sat3session").change(function () {
            itinerary.sat3role();
        });
        $("#sat4session").change(function () {
            itinerary.sat4role();
        });
        $("#sun1session").change(function () {
            itinerary.sun1role();
        });
        $("#sun2session").change(function () {
            itinerary.sun2role();
        });
        $("#sun3session").change(function () {
            itinerary.sun3role();
        });
        $("#sun4session").change(function () {
            itinerary.sun4role();
        });
        $("#mon1session").change(function () {
            itinerary.mon1role();
        });
        $("#mon2session").change(function () {
            itinerary.mon2role();
        });
        $("#mon3session").change(function () {
            itinerary.mon3role();
        });

        $(document).ready(function () {
            itinerary.setItinerary();
        });
    </script>
}
